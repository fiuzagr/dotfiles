{
  "$schema": "https://opencode.ai/config.json",
  "theme": "everforest",
  "lsp": {
    "clangd": {
      "disabled": true
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "$CONTEXT7_API_KEY"
      ]
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer $FIGMA_API_KEY"
      }
    }
  }
}
