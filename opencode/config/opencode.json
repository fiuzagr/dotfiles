{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "theme": "everforest",
  "mcp": {
    "DOCKER_MCP_TOOLKIT": {
      "command": [
        "docker",
        "mcp",
        "gateway",
        "run"
      ],
      "enabled": true,
      "type": "local"
    },
    "FIGMA_LOCAL": {
      "enabled": true,
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "TANSTACK": {
      "command": [
        "npx",
        "@tanstack/cli",
        "mcp"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "plugin": [],
